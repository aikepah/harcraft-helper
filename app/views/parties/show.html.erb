<div class="max-w-lg mx-auto">
  <h1 class="font-bold text-2xl mb-4"><%= @party.name %></h1>
  <p class="mb-2"><strong>Notes:</strong> <%= @party.notes %></p>
  <div class="mb-4 flex gap-2">
    <%= link_to 'Edit', edit_party_path(@party), class: 'px-4 py-2 rounded font-semibold transition focus:outline-none bg-[#3F4045] text-[#FCFCFC] hover:bg-[#5D737E] hover:text-[#02111B]', aria: { label: 'Edit party' } %>
    <%= link_to 'Inventory', party_party_components_path(@party), class: 'px-4 py-2 rounded font-semibold transition focus:outline-none bg-[#5D737E] text-[#02111B] hover:bg-[#3F4045] hover:text-[#FCFCFC]', aria: { label: 'View inventory' } %>
    <%= link_to 'Back to Parties', parties_path, class: 'px-4 py-2 rounded font-semibold transition focus:outline-none bg-[#3F4045] text-[#FCFCFC] hover:bg-[#5D737E] hover:text-[#02111B]', aria: { label: 'Back to parties' } %>
  </div>
</div>
